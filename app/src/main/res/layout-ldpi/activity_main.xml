<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttonColor"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/sayiGoster"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:background="@color/editTextBackground"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="60dp"
        android:paddingRight="20dp"
        android:paddingBottom="40dp"
        android:text="0"
        android:textColor="@color/buttonColor"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAC"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSilTik"
                android:text="AC"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnArtiEksi"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="+/-"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnYuzde"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnYuzdeTik"
                android:text="%"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnBolme"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnOpTik"
                android:text="/"
                android:textColor="#FF000000"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="7"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="8"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="9"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnCarpim"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnOpTik"
                android:text="x"
                android:textColor="#FF000000"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="4"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="5"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="6"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEksi"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnOpTik"
                android:text="-"
                android:textColor="#FF000000"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="1"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="2"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="3"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnArti"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnOpTik"
                android:text="+"
                android:textColor="#FF000000"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn0"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="0"
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnVirgul"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:text=","
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnNokta"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenar"
                android:onClick="btnSayiTik"
                android:text="."
                android:textColor="#FF000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEsit"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/editTextBackground"
                android:onClick="btnEsitTik"
                android:text="="
                android:textColor="@color/buttonColor"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>